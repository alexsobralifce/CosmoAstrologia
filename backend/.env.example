# Backend Environment Variables
# Copy this file to .env for local development
# For production (Railway/Vercel), set these as environment variables in the platform

# Database
# Local: sqlite:///./astrologia.db
# Production: postgresql://user:password@host:port/dbname
DATABASE_URL=sqlite:///./astrologia.db

# Security - IMPORTANT: Change in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
# Local: http://localhost:3000,http://localhost:5173
# Production: https://your-frontend-url.vercel.app
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001,http://localhost:3002

# Google OAuth (Backend)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Groq API Key (for AI interpretations)
# Get from: https://console.groq.com/
GROQ_API_KEY=

# Port (optional, defaults to 8000)
PORT=8000
