def _load_validation_file(section: str, lang: str = 'pt') -> str:
    """
    Carrega o arquivo de valida√ß√£o para uma se√ß√£o espec√≠fica.
    
    Args:
        section: Nome da se√ß√£o (power, triad, personal, houses, karma, synthesis)
        lang: Idioma ('pt' ou 'en')
    
    Returns:
        Conte√∫do do arquivo de valida√ß√£o ou string vazia se n√£o encontrado
    """
    try:
        file_path = VALIDATION_DIR / f"{section}_{lang}.txt"
        if file_path.exists():
            return file_path.read_text(encoding='utf-8')
        else:
            print(f"[WARNING] Arquivo de valida√ß√£o n√£o encontrado: {file_path}")
            return ""
    except Exception as e:
        print(f"[ERROR] Erro ao carregar arquivo de valida√ß√£o para {section}_{lang}: {e}")
        return ""


