    userName: Optional[str] = None
def _clean_context_text(text: str, planet: str, sign: str, house: int) -> str:
    """
    Limpa o texto do contexto removendo informa√ß√µes sobre outras casas e focando na combina√ß√£o espec√≠fica.
    """
    import re
    if not text:
        return ""
    
    # Remover metadados
    text = re.sub(r'METADADOS:.*?$', '', text, flags=re.MULTILINE | re.IGNORECASE)
    text = re.sub(r'`[^`]+`', '', text)
    
    # Remover informa√ß√µes sobre outras casas (manter apenas a casa espec√≠fica)
    # Padr√£o: "Casa X" ou "X¬™ casa" onde X != house
    if house:
        # Remover men√ß√µes a outras casas, mas manter a casa espec√≠fica
        pattern = rf'\b(?:casa\s+(?!{house}\b)\d+|(?!{house}\b)\d+[¬™¬∞]\s+casa)\b'
        text = re.sub(pattern, '', text, flags=re.IGNORECASE)
    
    # Remover linhas que mencionam outras casas explicitamente
    lines = text.split('\n')
    filtered_lines = []
    for line in lines:
        if house:
            line_lower = line.lower()
            # Verificar se menciona outras casas
            other_house_pattern = rf'\bcasa\s+(?!{house}\b)\d+\b'
            has_other_house = re.search(other_house_pattern, line_lower)
            # Verificar se menciona a casa espec√≠fica
            has_specific_house = f"casa {house}" in line_lower or f"{house}¬™ casa" in line_lower or f"{house}¬∞ casa" in line_lower
            # Verificar se menciona o planeta na linha (para manter contexto relevante)
            has_planet = planet.lower() in line_lower
            
            # Manter linha se:
            # 1. N√£o menciona outras casas E menciona a casa espec√≠fica OU o planeta
            # 2. Menciona a casa espec√≠fica mesmo que tenha outras casas (prioridade)
            if has_specific_house or (not has_other_house and has_planet):
                filtered_lines.append(line)
        else:
            filtered_lines.append(line)
    
    text = '\n'.join(filtered_lines)
    
    # Remover padr√µes que mencionam outras casas mesmo ap√≥s filtragem
    if house:
        # Remover frases que come√ßam com "{Planeta} na Casa X" onde X != house
        pattern = rf'\b{re.escape(planet.lower())}\s+(?:na|em)\s+casa\s+(?!{house}\b)\d+\b[^\n]*'
        text = re.sub(pattern, '', text, flags=re.IGNORECASE)
        # Remover "Casa X:" onde X != house
        pattern = rf'\bcasa\s+(?!{house}\b)\d+[¬™¬∞]?\s*casa\s*:'
        text = re.sub(pattern, '', text, flags=re.IGNORECASE)
        # Remover padr√µes como "Sol na :" (sem n√∫mero de casa espec√≠fico)
        pattern = rf'\b{re.escape(planet.lower())}\s+(?:na|em)\s*:\s*'
        text = re.sub(pattern, '', text, flags=re.IGNORECASE)
        # Remover linhas que s√£o apenas "Sol na :" ou similares
        lines = text.split('\n')
        filtered_lines = []
        for line in lines:
            line_stripped = line.strip()
            # Remover linhas que s√£o apenas "{Planeta} na :" ou "{Planeta} na Casa :"
            if not re.match(rf'^{re.escape(planet)}\s+(?:na|em)\s*(?:casa\s*)?:\s*$', line_stripped, re.IGNORECASE):
                filtered_lines.append(line)
        text = '\n'.join(filtered_lines)
    
    # Remover duplicatas de padr√µes repetitivos
    # Remover m√∫ltiplas ocorr√™ncias do mesmo padr√£o "Planeta na Casa X:"
    if house:
        # Encontrar todas as ocorr√™ncias de "Planeta na Casa X:" e manter apenas a primeira
        pattern = rf'\b{re.escape(planet.lower())}\s+(?:na|em)\s+casa\s+{house}\b'
        matches = list(re.finditer(pattern, text, re.IGNORECASE))
        if len(matches) > 1:
            # Manter apenas a primeira ocorr√™ncia e remover duplicatas pr√≥ximas
            first_match = matches[0]
            text_parts = []
            last_end = 0
            for i, match in enumerate(matches[1:], 1):
                # Se a pr√≥xima ocorr√™ncia est√° muito pr√≥xima da anterior, remover
                if match.start() - matches[i-1].end() < 200:
                    # Remover o texto entre as ocorr√™ncias duplicadas
                    text_parts.append(text[last_end:matches[i-1].end()])
                    last_end = match.end()
                else:
                    text_parts.append(text[last_end:match.start()])
                    last_end = match.end()
            text_parts.append(text[last_end:])
            text = ''.join(text_parts)
    
    # Limpar espa√ßos extras
    text = re.sub(r'\s+', ' ', text)
    text = text.strip()
    
    return text


def _remove_repetitive_patterns(text: str, planet: str, sign: str, house: int) -> str:
    """
    Remove padr√µes repetitivos como "Sol na Casa 8:" m√∫ltiplas vezes do texto.
    """
    import re
    if not text:
        return text
    
    # Remover padr√µes repetitivos como "{Planeta} na Casa {house}:" quando aparecem m√∫ltiplas vezes
    pattern = rf'\b{re.escape(planet)}\s+(?:na|em)\s+casa\s+{house}\s*:\s*'
    matches = list(re.finditer(pattern, text, re.IGNORECASE))
    
    if len(matches) > 1:
        # Manter apenas a primeira ocorr√™ncia e remover as outras
        lines = text.split('\n')
        filtered_lines = []
        seen_pattern = False
        
        for line in lines:
            line_lower = line.lower()
            # Verificar se a linha cont√©m o padr√£o
            if re.search(pattern, line_lower):
                if not seen_pattern:
                    # Manter a primeira ocorr√™ncia
                    seen_pattern = True
                    filtered_lines.append(line)
                # Ignorar ocorr√™ncias subsequentes
            else:
                filtered_lines.append(line)
        
        text = '\n'.join(filtered_lines)
    
    # Remover padr√µes como "Sol na :" (sem casa espec√≠fica)
    pattern = rf'\b{re.escape(planet)}\s+(?:na|em)\s*:\s*'
    text = re.sub(pattern, '', text, flags=re.IGNORECASE)
    
    # Remover linhas vazias m√∫ltiplas
    text = re.sub(r'\n\s*\n+', '\n\n', text)
    
    return text.strip()


def _extract_relevant_text(text: str, planet: str, sign: str, house: int) -> str:
    """
    Extrai apenas a parte relevante do texto que menciona a combina√ß√£o espec√≠fica.
    Remove informa√ß√µes sobre outras casas.
    """
    import re
    text_lower = text.lower()
    planet_lower = planet.lower()
    sign_lower = sign.lower()
    
    # Buscar padr√µes que mencionam a combina√ß√£o espec√≠fica
    patterns = [
        rf'{re.escape(planet_lower)}.*?casa\s+{house}\b',
        rf'casa\s+{house}.*?{re.escape(planet_lower)}',
        rf'{re.escape(planet_lower)}.*?{re.escape(sign_lower)}.*?casa\s+{house}\b',
    ]
    
    relevant_parts = []
    for pattern in patterns:
        matches = re.finditer(pattern, text_lower, re.IGNORECASE | re.DOTALL)
        for match in matches:
            start = max(0, match.start() - 300)
            end = min(len(text), match.end() + 500)
            part = text[start:end]
            # Remover informa√ß√µes sobre outras casas
            part = re.sub(rf'casa\s+(?!{house}\b)\d+[¬™¬∞]?\s+casa', '', part, flags=re.IGNORECASE)
            relevant_parts.append(part.strip())
    
    if relevant_parts:
        # Combinar partes relevantes, removendo duplicatas
        combined = " ".join(relevant_parts[:3])  # Limitar a 3 partes mais relevantes
        # Limitar tamanho total
        if len(combined) > 1500:
            combined = combined[:1500] + "..."
        return combined
    
    # Se n√£o encontrou padr√£o espec√≠fico, retornar texto original mas limitado
    return text[:1000] if len(text) > 1000 else text


